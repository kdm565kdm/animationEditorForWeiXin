<!--pages/setOption/setOption.wxml-->
<!--项目设置面板-->
<view>
  <image class="optionBarIcon setOptionBar"></image>
  <text class="optionBarInfo">项目设置 PROJECT SETTING</text>
  
<view class='optionInnerbar' >

  <view class='optionInnerTool optionInnerToolFps'>
    <image class="optionBarInnerIcon setOptionFps"></image>
    <text>帧率fps:</text>
    <input type='number' maxlength="2" bindinput="setFps" value='8'></input>
  </view>


  <view class='optionInnerTool optionInnerToolTitle'>
    <image class="optionBarInnerIcon setOptionTitle"></image>
    <text>片名title:</text>
    <input type='text' bindinput="setTitle"></input>
  </view>

  <view class='optionInnerTool optionInnerToolAuthor'>
    <image class="optionBarInnerIcon setOptionAuthor"></image>
    <text>导演author:</text>
    <input type='text' bindinput="setAuthor"></input>
  </view>
  
  <view class='optionInnerTool optionInnerToolSwitchCamera'>
    <view class="optionBarInnerIcon setOptionSwitchCamera" bindtap='SwitchCamera'></view> 
    <text class="setOptionSwitchCameraChineseText">切换相机</text>
        <text class="setOptionSwitchCameraEnglishText">SwitchCamera</text>
  </view>

 </view>
</view>
